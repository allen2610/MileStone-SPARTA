generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  password    String
  bio         String  @default("No bio")
  name        String 
  dateOfBirth DateTime 
  gender      Int
}

model Journal {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  content   String?
  userId    String 
}

model Moods {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  mood Int
  userId  String
}